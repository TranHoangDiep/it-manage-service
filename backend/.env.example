# ITSM Report Environment Configuration - Example
# Copy this file to .env and update values

# Database (Local PostgreSQL for storing synced data)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/itsm_report

# JWT Settings
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_EXPIRATION_HOURS=24

# ManageEngine ServiceDesk Plus API
SDP_API_KEY=your-sdp-api-key-here
SDP_BASE_URL=https://your-itsm-url.com/api/v3

# ========================================
# ITSM SQL Server Database Connection
# (For querying time spent data from WO_TECH_INFO)
# ========================================
SDP_DB_HOST=your-itsm-sql-server-ip
SDP_DB_PORT=1433
SDP_DB_NAME=servicedesk
SDP_DB_USER=your-readonly-user
SDP_DB_PASS=your-password
SDP_DB_DRIVER=mssql+pyodbc

# Sync Settings
USE_MOCK_DATA=false
SYNC_INTERVAL_SECONDS=300

# Flask
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
